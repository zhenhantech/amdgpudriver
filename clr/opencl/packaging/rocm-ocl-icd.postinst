#!/bin/bash

set -e

INSTALL_PATH=@CPACK_PACKAGING_INSTALL_PREFIX@

do_ldconfig() {
  echo ${INSTALL_PATH}/@CMAKE_INSTALL_LIBDIR@ > /@CMAKE_INSTALL_SYSCONFDIR@/ld.so.conf.d/10-rocm-opencl.conf && ldconfig
}

case "$1" in
  abort-deconfigure|abort-remove|abort-upgrade)
    echo "$1"
  ;;
  configure)
    do_ldconfig
  ;;
  *)
    exit 0
  ;;
esac
